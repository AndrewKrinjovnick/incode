{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "airbnb",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["spellcheck", "react", "@typescript-eslint", "prettier"],
  "rules": {
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".jsx"] }],
    "import/extensions": 0,
    "react/function-component-definition": 0,
    "import/prefer-default-export": "off",
    "camelcase": 0,
    "default-param-last": 0,
    "no-shadow": 0,
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-restricted-exports": 0,
    "import/no-unresolved": 0,
    "react/destructuring-assignment": 0,
    "no-param-reassign": 0,
    "react-hooks/exhaustive-deps": 0,
    "no-restricted-syntax": 0,
    "@typescript-eslint/no-explicit-any": "off",
    "no-prototype-builtins": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "spellcheck/spell-checker": [
      "warn",
      {
        "comments": true,
        "identifiers": true,
        "lang": "en_US",
        "minLength": 3,
        "skipIfMatch": [
          // Ignore URLs as values
          "^httpsS+$",
          // Other empty elements are added to comply with `array-element-newline` rule's setting:
          // "minItems": 6
          // Feel free to remove redundant elements after adding the new rules here
          "",
          "",
          "",
          "",
          ""
        ],
        "skipWordIfMatch": [
          // Ignore words, containing non-latin symbols, like: it's
          "\bw*[^ws]+w*\b",
          // Ignore numbers with measurement points, like: 70vw
          "\bd+[a-z%]+\b",
          // Other empty elements are added to comply with `array-element-newline` rule's setting:
          // "minItems": 6
          // Feel free to remove redundant elements after adding the new rules here
          "",
          "",
          "",
          ""
        ],
        "skipWords": [
          // Add here valid words which are new to spellcheck
          "autofill",
          "Incode",
          "Joi",
          "jsx",
          "lang",
          "len",
          "mailto",
          "moz",
          "pdf",
          "webkit"
        ],
        "strings": true,
        "templates": true
      }
    ]
  }
}
